{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "nicName": {
      "type": "string"
    },
    "vnetName": {
      "type": "string"
    },
    "vnetCIDR": {
      "type": "string"
    },
    "subnetCIDR": {
      "type": "string"
    },
    "subnetName": {
      "type": "string"
    }
  },
  "variables": {
    "vnetId": "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName'))]",
    "diagnosticsExtensionName": "IaaSDiagnostics"
  },
  "resources": [
    {
      "name": "[parameters('nicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2018-04-01",
      "location": "[parameters('location')]",
      "dependsOn": [
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "subnet": {
                "id": "[reference('vnet').outputs.subnetId.value]"
              },
              "privateIPAllocationMethod": "Dynamic",
              "publicIpAddress": {
                "id": "[reference('publicip').outputs.publicIpAddressId.value]"
              }
            }
          }
        ],
        "networkSecurityGroup": {
          "id": "[reference('nsg').outputs.nsgId.value]"
        }
      },
      "tags": {}
    },
    {
      "name": "vnet",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-08-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(deployment().properties.templateLink.uri, 'vnet.json')]"
        },
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          },
          "vnetName": {
            "value": "[parameters('vnetName')]"
          },
          "subnetName": {
            "value": "[parameters('subnetName')]"
          },
          "vnetCIDR": {
            "value": "[parameters('vnetCIDR')]"
          },
          "subnetCIDR": {
            "value": "[parameters('subnetCIDR')]"
          }
        }
      }
    },
    {
      "name": "nsg",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-08-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(deployment().properties.templateLink.uri, 'nsg.json')]"
        },
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          },
          "name": {
            "value": "[concat(parameters('nicName'), '-nsg')]"
          },
          "nsgRules": {
            "value": [
              {
                "name": "RDP",
                "properties": {
                  "priority": 300,
                  "protocol": "TCP",
                  "access": "Allow",
                  "direction": "Inbound",
                  "sourceAddressPrefix": "*",
                  "sourcePortRange": "*",
                  "destinationAddressPrefix": "*",
                  "destinationPortRange": "3389"
                }
              }
            ]
          }
        }
      }
    },
    {
      "name": "publicip",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-08-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(deployment().properties.templateLink.uri, 'public-ip.json')]"
        },
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          },
          "name": {
            "value": "[concat(parameters('nicName'), '-publicip')]"
          },
          "dnsName": {
            "value": "[parameters('nicName')]"
          }
        }
      }
    }
  ],
  "outputs": {
    "nicId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Network/networkInterfaces', parameters('nicName'))]"
    }
  }
}


