{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "template": {
      "type": "object"
    },
    "location": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "publicIpAddressId": {
      "type": "string",
      "defaultValue": "unspecified"
    },
    "nsgId": {
      "type": "string",
    },
    "vnetName": {
      "type": "string"
    },
    "subnetName": {
      "type": "string"
    }
  },
  "variables": {
    "publicIpAddressId": {
      "id": "[parameters('publicIpAddressId')]"
    },
    "nsgId": {
      "id": "[parameters('publicIpAddressId')]"
    }
  },
  "resources": [
    {
      "name": "[parameters('name')]",
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2018-04-01",
      "location": "[parameters('location')]",
      "dependsOn": [
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('subnetName'))]"
              },
              "privateIPAllocationMethod": "Dynamic",
              "publicIpAddress": "[if(equals(parameters('publicIpAddressId'), 'unspecified'), json('null'), variables('publicIpAddressId')]"
            }
          }
        ],
        "networkSecurityGroup": "[if(equals(parameters('nsgId'), 'unspecified'), json('null'), variables('nsgId')]"
      }
    }
  ],
  "outputs": {
    "resourceId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Network/networkInterfaces', parameters('nicName'))]"
    }
  }
}


